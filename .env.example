# EVClaw Environment Variables (EXAMPLE)
# Copy to .env and fill in required values.

# ---------------------------------------------------------------------------
# Required wallet + node
# ---------------------------------------------------------------------------
# Main Hyperliquid wallet address that EVClaw trades.
HYPERLIQUID_ADDRESS=
# Delegated agent signer private key authorized for HYPERLIQUID_ADDRESS.
# Do NOT paste your main wallet private key here.
HYPERLIQUID_AGENT_PRIVATE_KEY=
# EVClaw-gated node2 path (wallet key enforced server-side).
HYPERLIQUID_PRIVATE_NODE=https://node2.evplus.ai/evclaw/info

# Optional: comma-separated proxies for public endpoint calls
HYPERLIQUID_PROXIES=

# Runtime paths (optional)
EVCLAW_ROOT=
EVCLAW_DB_PATH=
EVCLAW_RUNTIME_DIR=
EVCLAW_DOCS_DIR=
EVCLAW_MEMORY_DIR=
EVCLAW_SIGNALS_DIR=

# OpenClaw bootstrap ops (optional)
EVCLAW_INSTALL_OPENCLAW_CRONS=1
EVCLAW_INSTALL_EXTRA_SKILLS=1
EVCLAW_EXTRA_SKILLS=trade,execute,best3,stats,hedge
EVCLAW_OPENCLAW_CRON_AGENT=main
EVCLAW_OPENCLAW_CRON_CHANNEL=
EVCLAW_OPENCLAW_CRON_TO=
EVCLAW_REMOVE_LEGACY_HLTRADER_CRONS=0
EVCLAW_OPENCLAW_SKILLS_DIR=

# ---------------------------------------------------------------------------
# EVPlus data endpoints (required service dependency)
# ---------------------------------------------------------------------------
EVCLAW_TRACKER_BASE_URL=https://tracker.evplus.ai
EVCLAW_SSE_HOST=tracker.evplus.ai
EVCLAW_SSE_PORT=8443
EVCLAW_SSE_ENDPOINT=/sse/tracker
# Keep 0 in production. Set 1 only for local/debug with self-signed TLS.
EVCLAW_SSE_INSECURE_SSL=0
EVCLAW_TRACKER_HIP3_PREDATOR_URL=
EVCLAW_TRACKER_HIP3_SYMBOLS_URL=
EVCLAW_TRACKER_SYMBOL_URL_TEMPLATE=

# ---------------------------------------------------------------------------
# Venue routing
# ---------------------------------------------------------------------------
EVCLAW_ENABLED_VENUES=hyperliquid,hip3
EVCLAW_DEFAULT_VENUE_PERPS=hyperliquid
EVCLAW_DEFAULT_VENUE_HIP3=hip3

# Lighter (optional)
LIGHTER_BASE_URL=https://mainnet.zklighter.elliot.ai
LIGHTER_ACCOUNT_INDEX=
LIGHTER_API_KEY_PRIVATE_KEY=
LIGHTER_API_KEY_INDEX=
LIGHTER_RL_MAX_REQUESTS=35

# ---------------------------------------------------------------------------
# LLM entry/exit controls
# ---------------------------------------------------------------------------
EVCLAW_LLM_GATE_AGENT_ID=default
EVCLAW_LLM_GATE_MODEL=
EVCLAW_LLM_GATE_THINKING=medium
EVCLAW_LLM_GATE_TIMEOUT_SEC=120
EVCLAW_LLM_GATE_MAX_KEEP=4
EVCLAW_LLM_GATE_RETRY_ON_PARSE_FAIL=1

EVCLAW_HIP3_LLM_GATE_AGENT_ID=default
EVCLAW_HIP3_LLM_GATE_MODEL=
EVCLAW_HIP3_LLM_GATE_THINKING=medium
EVCLAW_HIP3_LLM_GATE_TIMEOUT_SEC=120
EVCLAW_HIP3_LLM_GATE_MAX_KEEP=4
EVCLAW_HIP3_LLM_GATE_RETRY_ON_PARSE_FAIL=1

EVCLAW_EXIT_DECIDER_AGENT_ID=default
EVCLAW_EXIT_DECIDER_MODEL=openai-codex/gpt-5.2
EVCLAW_EXIT_DECIDER_THINKING=medium
EVCLAW_EXIT_DECIDER_POLL_SEC=10
EVCLAW_EXIT_DECIDER_HOLD_BACKOFF_SEC=900
EVCLAW_EXIT_DECIDER_CLOSE_FAILED_BACKOFF_SEC=1800
EVCLAW_EXIT_DECIDER_CLOSE_FAILED_STREAK_THRESHOLD=3
EVCLAW_EXIT_DECIDER_CLOSE_FAILED_STREAK_BACKOFF_SEC=3600
EVCLAW_EXIT_DECIDER_MAX_ACTIONS_PER_LOOP=1
EVCLAW_EXIT_DECIDER_SYMBOL_PREFIXES=
EVCLAW_EXIT_DECIDER_VENUES=hyperliquid
EVCLAW_PERPS_EXIT_DECIDER_VENUES=
EVCLAW_PERPS_EXIT_DECIDER_SYMBOL_PREFIXES=

EVCLAW_HIP3_EXIT_DECIDER_AGENT_ID=default
EVCLAW_HIP3_EXIT_DECIDER_MODEL=
EVCLAW_HIP3_EXIT_DECIDER_THINKING=medium

EVCLAW_LEARNING_REFLECTOR_AGENT_ID=default
EVCLAW_LEARNING_REFLECTOR_THINKING=medium

# ---------------------------------------------------------------------------
# Runtime timers / toggles
# ---------------------------------------------------------------------------
EVCLAW_CYCLE_RETRY_DELAY_SECONDS=30
EVCLAW_LOOP_SLEEP_JITTER_SECONDS=0
EVCLAW_PENDING_CHECK_INTERVAL_SEC=30
EVCLAW_HIP3_FLIP_EMIT_EVENTS=1
EVCLAW_HIP3_FLIP_NOTIFY_COOLDOWN_SECONDS=900
EVCLAW_HIP3_TRADING_ENABLED=1
EVCLAW_CONTEXT_MAX_AGE_SEC=600
EVCLAW_STARTING_EQUITY_CACHE_TTL_SECONDS=300
EVCLAW_HIP3_CACHE_MAX=2000
EVCLAW_HIP3_TRIGGER_GLOBAL_COOLDOWN_SEC=30
EVCLAW_HIP3_TRIGGER_SYMBOL_COOLDOWN_SEC=120
EVCLAW_HIP3_TRIGGER_TTL_SEC=700
EVCLAW_MANUAL_TRADE_RISK_PCT=1.0
EVCLAW_MANUAL_TRADE_DEFAULT_SIZE_USD=100

# Safety
EVCLAW_SAFETY_TIER1_MAX_SIZE_MULTIPLIER=1.0
EVCLAW_SAFETY_TIER1_MIN_Z_SCORE=2.0
EVCLAW_SAFETY_TIER1_MIN_SIGNALS_AGREEING=3
EVCLAW_SAFETY_TIER1_ALERT_ON_TRADE=0
EVCLAW_SAFETY_TIER1_ALLOW_NEW_TRADES=1

EVCLAW_RETRY_ON_PARSE_FAIL=1
